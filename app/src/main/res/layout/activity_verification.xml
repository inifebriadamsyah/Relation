<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" >

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:alpha="0.8"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/check_your_email"
            android:textColor="@color/dark_main"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="64dp"
            android:alpha="0.8"
            android:fontFamily="@font/nunito_semibold"
            android:paddingTop="12dp"
            android:text="@string/we_ve_sent_the_code_to_your_email"
            android:textColor="@color/dark_main"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="64dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/number1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/verification_number"
            android:autofillHints=""
            android:labelFor="@id/number1"/>
        <EditText
            android:id="@+id/number2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/verification_number"
            android:autofillHints=""
            android:labelFor="@id/number2"/>
        <EditText
            android:id="@+id/number3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/verification_number"
            android:autofillHints=""
            android:labelFor="@id/number3"/>
        <EditText
            android:id="@+id/number4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:background="@drawable/verification_number"
            android:autofillHints=""
            android:labelFor="@id/number4"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/counter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/social"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signin_here1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/code_expires_in"
            android:textColor="@color/gray_main"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signin_here2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:alpha="0.8"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/_00_12"
            android:textColor="@color/red_main"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/signup_here1"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button"
        android:fontFamily="@font/nunito_bold"
        android:padding="16dp"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="16dp"
        android:theme="@style/Theme.Relation"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter_text"
        app:layout_constraintVertical_bias="0.6"/>

    <Button
        android:id="@+id/send_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        android:background="@color/transparent"
        android:fontFamily="@font/nunito_bold"
        android:outlineProvider="background"
        android:padding="16dp"
        android:text="@string/send_again"
        android:textAllCaps="false"
        android:shadowRadius="0"
        android:elevation="0dp"
        android:textColor="@color/gray_main"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify"
        app:layout_constraintVertical_bias="0.26" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>