<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Relation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryVariant">@color/orange_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange_main</item>

        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fontFamily">@font/nunito_semibold</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/back</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <item name="snackbarStyle">@style/SnackbarStyle</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FilterCustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/filter_chip_background_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/filter_chip_stroke_color</item>
        <item name="android:textColor">@color/filter_chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TitleTopBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@font/nunito_semibold</item>
        <item name="subtitleTextAppearance">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SubtitleTopBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@font/nunito_semibold</item>
        <item name="subtitleTextAppearance">@font/nunito_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomViewAllTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/filter_sheet</item>
    </style>

    <style name="BottomSheetDialogStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Theme.Relasi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Relasi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">66dp</item>
    </style>


    <style name="ProgressStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="collapsedTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="expandedTitleStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>

    <style name="noAnimTheme" parent="Theme.Relation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Relation.Toolbar">
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>